@model TechJobsPersistent.ViewModels.AddJobViewModel
<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name :</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"> </span>
    </div>

    <div class="form-group">

        <label asp-for="EmployerId">Employer :</label>
        <select class="form-control" asp-for="EmployerId" asp-items="@Model.Employers" ></select>

        <div> <a asp-controller="Employer" asp-action="Add">  Add Employer </a> </div>

    </div>

    <div class="form-group">
        <label>Skill :</label>
       
            @foreach (var skill in Model.Skills)
        {   <label for="@skill.Id">@skill.Name</label>
            <input type="checkbox" name="selectedSkills" value="@skill.Id" />
            @*<label> @skill.Name</label>*@
        }
    <div> <a asp-controller="Skill" asp-action="Add">  Add Skill </a> </div>

    </div>


    <input type="submit" value="Add Job" />
</form>

